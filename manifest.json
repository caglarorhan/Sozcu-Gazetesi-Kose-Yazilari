{
  "name": "SGKY",
  "description" : "Directly read columnists of Gozcu Newsletter from Turkey",
  "version": "2023.0.1",
  "manifest_version": 3,
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "./img/sgky_16.png",
    "32": "./img/sgky_32.png",
    "64": "./img/sgky_64.png",
    "128": "./img/sgky_128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./img/sgky_16.png",
      "32": "./img/sgky_32.png",
      "64": "./img/sgky_64.png",
      "128": "./img/sgky_128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.sozcu.com.tr/*",
        "https://www.sozcu.com.tr/kategori/yazarlar/"
      ],
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
