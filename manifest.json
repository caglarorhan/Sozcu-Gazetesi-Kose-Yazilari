{
  "name": "SGKY",
  "description" : "Directly read columnists from Gozcu Newsletter",
  "version": "2020.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "SGKY",
    "default_icon": "./img/sgky_16.png"
  },
  "icons": {
    "16": "./img/sgky_16.png",
    "32": "./img/sgky_32.png",
    "64": "./img/sgky_64.png",
    "128": "./img/sgky_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.sozcu.com.tr/*"
      ],
      "all_frames": true,
      "js": [
        "./js/content.js"
      ],
      "match_about_blank": true
    }
  ],
  "content_security_policy": "script-src 'self' https://www.sozcu.com.tr/* https://sozcu.com.tr/*; object-src 'self';"
}
